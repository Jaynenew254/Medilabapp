<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context=".Screen1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/skip1"
            android:text="Skip"
            android:fontFamily="@font/montserrat1"
            android:textColor="#4C4545"
            android:textSize="20sp"
            android:textAlignment="textEnd"/>

    </LinearLayout>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BOOK YOUR LAB"
        android:textAlignment="textStart"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="100dp"
        android:textSize="34sp"
        android:textStyle="bold"/>
    <com.google.android.material.textview.MaterialTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Precise, methodical, controlled, analytical, diagnostic, replicable, rigorous, scientific, instrumental, quantitative."
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textStyle="normal"
        android:textSize="14sp"
        android:lineHeight="20dp"
        android:textColor="#F3EFEF"/>
    <ImageView
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:src="@drawable/screen11"
        android:padding="20dp"/>
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fab"
            android:layout_gravity="bottom|end"
            android:layout_margin="15dp"
            android:backgroundTint="#4005AA"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:text="Next"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_anchor="@+id/fab"
            app:layout_anchorGravity="center" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>





</LinearLayout>